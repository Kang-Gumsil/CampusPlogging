<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="java.util.ArrayList" />

        <variable
            name="title"
            type="String" />

        <variable
            name="hide"
            type="Boolean" />

        <variable
            name="challenges"
            type="ArrayList&lt;dku.gyeongsotone.gulging.campusplogging.data.local.model.Challenge&gt;" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title"
            style="@style/text_18_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:text="@{title}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="플로깅을 시작하는 새내기들에게" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_btn_set_hide"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="28dp"
            android:scaleType="fitXY"
            android:src="@{hide == true ? @drawable/ic_arrow_up : @drawable/ic_arrow_down}"
            app:layout_constraintBottom_toBottomOf="@id/tv_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_title"
            tools:src="@drawable/ic_arrow_up" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_challenge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:nestedScrollingEnabled="false"
            android:visibility="@{hide == false}"
            app:challenge="@{challenges}"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            app:spanCount="2"
            tools:listitem="@layout/item_challenge_small" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>